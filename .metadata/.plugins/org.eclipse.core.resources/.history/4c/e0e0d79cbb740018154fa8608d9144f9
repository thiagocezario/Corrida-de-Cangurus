
public class SyncBuffer {
	private int buffer = -1;
	public int aux = 0;
	
	public synchronized int pular(int distanciaPulada, int distanciaTotal) {
		try {
			while(aux%5 != Principal.canguruDaVez) {
				wait();
			}
		} catch (Exception ex) {
			ex.getStackTrace();
		}
		
		System.err.println(Thread.currentThread().getName() + " pulou " + distanciaPulada + "m de " + distanciaTotal + "m");
		buffer = distanciaPulada;
		
		aux++;
		notify();
		
		return buffer;
	}
}
